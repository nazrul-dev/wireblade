{
    "name": "nazruldev/wireblade",
    "description": "Modern Blade UI with Livewire",
    "type": "library",
    "license": "MIT",
    "minimum-stability": "dev",
     "keywords": [
        "livewire components",
        "livewire-ui",
        "wireblade",
        "laravel components",
        "blade components"
    ],
    "require": {
        "php": "^7.4|^8.0",
        "symfony/http-kernel": "^5.0",
        "illuminate/support": "^8.0",
        "illuminate/database": "^8.0",
        "illuminate/validation": "^8.0",
        "friendsofphp/php-cs-fixer": "^3.1"
    },
    "require-dev": {
        "laravel/framework": "^8.0",
        "mockery/mockery": "^1.3.1",
        "phpunit/phpunit": "^9.5",
        "orchestra/testbench": "^6.0",
        "orchestra/testbench-dusk": "^6.0",
        "psy/psysh": "@stable",
        "livewire/livewire": "^2.6"
    },
    "authors": [
        {
            "name": "Nazrul Rahim",
            "email": "nazrul.dev@gmail.com"
        }
    ],

    "prefer-stable": true,
    "autoload": {
        "psr-4": {
            "WireBlade\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "App\\": "vendor/orchestra/testbench-core/laravel/app",
           
        }
    },
    "scripts": {
        "post-autoload-dump": [
            "./vendor/bin/dusk-updater detect --no-interaction"
        ],
        "test": "./vendor/bin/phpunit --configuration phpunit.xml",
        "phpcs": "./vendor/bin/php-cs-fixer fix"
    },
    "extra": {
        "laravel": {
            "providers": [
                "WireBlade\\Providers\\WireBladeServiceProvider"
            ],
            "aliases": []
        }
    }
}
